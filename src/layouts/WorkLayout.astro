---
import { ScrollArea } from "../components/ui/ScrollArea";
import MainLayout from "./MainLayout.astro";
const { content } = Astro.props;
---

<style>
  .topGradient {
    height: 50px;
    width: 100%;
    background: linear-gradient(
      rgba(255, 255, 255, 0.9),
      rgba(255, 255, 255, 0)
    );
    position: fixed;
    top: 100px;
    z-index: 10;
  }

  .bottomGradient {
    height: 50px;
    width: 100%;
    background: linear-gradient(
      to top,
      rgba(255, 255, 255, 0.9),
      rgba(255, 255, 255, 0)
    );
    position: fixed;
    bottom: 4.5rem;
    z-index: 10;
  }

  @media (min-width: 768px) {
    .topGradient {
      top: 100px;
    }

    .bottomGradient {
      bottom: 3.5rem;
    }
  }
</style>

<MainLayout {content}>
  <div class="grid grid-cols-2">
    <div class="h-fit p-12">
      <slot name="description" />
    </div>
    <div class="flex-1 flex-grow-0">
      <div class="topGradient"></div>
      <div class="bottomGradient"></div>
      <ScrollArea
        client:load
        client:load
        className="h-[calc(100vh-10px)] pb-52 md:pb-44 "
        classNameForView="flex flex-col gap-5"
      >
        <slot name="images" />
      </ScrollArea>
    </div>
  </div>
</MainLayout>
