---
import { changeLanguage, t } from "i18next";
import WorkLayout from "../../../layouts/WorkLayout.astro";
import ClicableImage from "../../../components/ClicableImage";
import capaPNG from "../../../assets/daHorta/Capa_daHorta.png";
import examePNG from "../../../assets/daHorta/Exame.png";
import sitemapPNG from "../../../assets/daHorta/Sitemap.png";
import screens01PNG from "../../../assets/daHorta/screens01.png";
import conjuntoJPG from "../../../assets/daHorta/conjunto.jpg";
import { Image } from "astro:assets";

changeLanguage("pt");

const content = {
    title: t("daHorta.title"),
};
---

<WorkLayout {content}>
  <h1 slot="title" class="font-bold md:text-4xl">{t("daHorta.title")}</h1>
  <div slot="description">
    <p class="prose prose-neutral mb-8 font-sans dark:prose-invert md:text-xl">
      {t("daHorta.description1")}
    </p>

    <p class="prose prose-neutral mb-8 font-sans dark:prose-invert md:text-xl">
      {t("daHorta.description2")}
    </p>

    <p class="font-sans">
      {t("projectMadeWith")}
      <ul>
        <li>
          <a
            href="https://www.behance.net/mariafigueira"
            target="_blank"
            rel="noopener noreferrer"
            class="cursor-none hover:cursor-none underline hover:text-blue-500 hover:underline"
          >
            Maria Figueira</a
          >
        </li>
        <li>
          <a
            href="https://www.behance.net/mariaspcc"
            target="_blank"
            rel="noopener noreferrer"
            class="cursor-none hover:cursor-none underline hover:text-blue-500 hover:underline"
          >
            Maria Soares</a
          >
        </li>
        <li>
          <a> Mariana Gonzales</a>
        </li>
      </ul>
    </p>
  </div>
  <div slot="images" class="flex flex-col gap-5">
    <ClicableImage client:visible>
      <Image
        src={capaPNG}
        slot={"thumbnail"}
        alt="My life timeline"
        quality={"mid"}
        height={700}
      />

      <Image
        src={capaPNG}
        slot={"fullImage"}
        alt="My life timeline"
        quality={"max"}
        height={1000}
      />
    </ClicableImage>
    <ClicableImage client:visible>
      <Image
        src={examePNG}
        slot={"thumbnail"}
        alt="My life timeline"
        height={900}
      />

      <Image
        src={examePNG}
        slot={"fullImage"}
        alt="My life timeline"
        quality={"max"}
        height={1000}
      />
    </ClicableImage>

    <ClicableImage client:visible>
      {/* @ts-ignore */}

      <Image
        src={sitemapPNG}
        slot={"thumbnail"}
        alt="My life timeline"
        height={900}
      />

      <Image
        src={sitemapPNG}
        slot={"fullImage"}
        alt="My life timeline"
        quality={"max"}
        height={1000}
      />
    </ClicableImage>

    <ClicableImage client:visible>
      <Image
        src={conjuntoJPG}
        slot={"thumbnail"}
        alt="My life timeline"
        quality={"mid"}
      />

      <Image
        src={conjuntoJPG}
        slot={"fullImage"}
        alt="My life timeline"
        quality={"max"}
      />
    </ClicableImage>
    <ClicableImage client:visible>
      <Image
        src={screens01PNG}
        slot={"thumbnail"}
        alt="My life timeline"
        height={700}
        quality={"mid"}
      />

      <Image
        src={screens01PNG}
        slot={"fullImage"}
        alt="My life timeline"
        quality={"max"}
        height={900}
        class={"justify-self-center"}
        loading={"lazy"}
      />
    </ClicableImage>
  </div>
</WorkLayout>
