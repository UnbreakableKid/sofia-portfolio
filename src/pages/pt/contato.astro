---
import { changeLanguage } from "i18next";
import MainLayout from "../../layouts/MainLayout.astro";
import { Button } from "../../components/ui/Button";

changeLanguage("pt");

const content = {
    title: "Home",
    description: "Home page",
    url: "https://example.com",
    image: "https://example.com/image.png",
};
---

<MainLayout content={content}>
  <div class="grid h-full content-center justify-center justify-items-center">
    <h2
      class="relative z-10 bg-black font-serif text-7xl font-bold text-white mix-blend-difference"
    >
      Vamos conversar?
    </h2>
    <div class="mt-10 flex flex-wrap justify-center gap-10">
      <a href="mailto:ribeiro.anasofia@gmail.com">
        <Button variant="link">E-mail</Button>
      </a>
      <a href="https://www.linkedin.com/in/sofia-ribeiro-design/">
        <Button variant="link">LinkedIn</Button>
      </a>
      <a href="https://www.instagram.com/ah_sofs">
        <Button variant="link">Instagram</Button>
      </a>
      <Button variant="link">Behance</Button>
    </div>
  </div>
</MainLayout>
