---
import { changeLanguage } from "i18next";
import WorkLayout from "../../layouts/WorkLayout.astro";
import ClicableImage from "../../components/ClicableImage";
import bookyUseFlowPNG from "../../assets/Booky/Booky_userflow.png";
import bookySiteMapPNG from "../../assets/Booky/Booky_sitemap.png";
import bookyInprogressPNG from "../../assets/Booky/Booky_inprogress.jpg";
import { Image } from "astro:assets";

changeLanguage("en");

const content = {
    title: "Hello World",
    body: "This is a test",
};
---

<WorkLayout {content}>
  <h1 slot="title" class="font-bold md:text-4xl">Booky</h1>
  <div slot="description">
    <p class="prose prose-neutral mb-8 font-sans dark:prose-invert md:text-xl">
      O Booky é uma plataforma de venda de livros em segunda mão. Este desafio
      surge como um desafio pessoal resultante das falhas que senti para o
      vendedor e comprador presentes nas plataformas atuais em Portugal.
    </p>

    <p class="prose prose-neutral font-sans dark:prose-invert md:text-xl">
      Este projeto está atualmente em desenvolvimento.
    </p>
  </div>
  <div slot="images" class="flex flex-col gap-5">
    <ClicableImage client:visible>
      <Image
        src={bookyUseFlowPNG}
        slot={"thumbnail"}
        alt="Representation of the user flow"
        quality="mid"
        height={760}
      />

      <Image
        src={bookyUseFlowPNG}
        slot={"fullImage"}
        alt="Representation of the user flow"
        quality={"max"}
        height={800}
      />
    </ClicableImage>

    <ClicableImage client:visible>
      <Image
        src={bookySiteMapPNG}
        slot={"thumbnail"}
        alt="Booky sitemap"
        height={900}
      />

      <Image
        src={bookySiteMapPNG}
        slot={"fullImage"}
        alt="Booky sitemap"
        quality={"max"}
        height={1000}
      />
    </ClicableImage>

    <ClicableImage client:visible>
      <Image
        src={bookyInprogressPNG}
        slot={"thumbnail"}
        alt="In progress identity"
        height={800}
      />

      <Image
        src={bookyInprogressPNG}
        slot={"fullImage"}
        alt="In progress identity"
        quality={"max"}
        height={1000}
      />
    </ClicableImage>
  </div>
</WorkLayout>
